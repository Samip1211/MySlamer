<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frndName"
        android:hint="Add Name Here"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Add Email Here"
        android:id="@+id/frndMail"
        android:layout_below="@+id/frndName"
        android:layout_alignLeft="@+id/frndName"
        android:layout_alignStart="@+id/frndName"
        android:layout_alignRight="@+id/frndName"
        android:layout_alignEnd="@+id/frndName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Frnd"
        android:id="@+id/button2"
        android:layout_below="@+id/frndMail"
        android:layout_centerHorizontal="true" />

</RelativeLayout>